{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "DefaultConnection": "Server=localhost;Port=3306;Database=smartgymdb;User=root;Password=1234;"
  },
  "Jwt": {
    // Секретный ключ для подписи токенов
    // ВАЖНО: В продакшене используйте длинный случайный ключ (минимум 32 символа)
    // Никогда не храните этот ключ в репозитории!
    "SecretKey": "your_super_secret_key_min_32_characters_long_change_in_production",

    // Кто выпустил токен
    "Issuer": "WebAPI",

    // Для кого предназначен токен
    "Audience": "WebAPI",

    // Время жизни Access токена (минуты)
    "AccessTokenExpiryMinutes": 120,

    // Время жизни Refresh токена (дни)
    "RefreshTokenExpiryDays": 7
  }
}
